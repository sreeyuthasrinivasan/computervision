import cv2

def reverse_video(input_video, output_video):
    cap = cv2.VideoCapture(input_video)
    frames = []

    while True:
        ret, frame = cap.read()
        if not ret:
            break
        frames.append(frame)

    cap.release()
    frames.reverse()

    h, w, _ = frames[0].shape
    out = cv2.VideoWriter(output_video,
                          cv2.VideoWriter_fourcc(*'XVID'),
                          20, (w, h))

    for f in frames:
        out.write(f)

    out.release()

reverse_video("input.mp4", "reverse.mp4")
